<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>פרטי שואל - ספרייה</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container { padding-top: 2rem; }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
            background: rgba(255,255,255,0.95);
        }
        .card-header {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border-radius: 15px 15px 0 0 !important;
            color: white;
            padding: 1.5rem;
        }
        .btn-custom {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
        }
        .info-card {
            background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border-radius: 10px;
        }
        .book-item {
            transition: transform 0.2s;
            border-radius: 10px;
        }
        .book-item:hover {
            transform: translateY(-2px);
        }
        .status-badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- כותרת וניווט -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2><i class="fas fa-user me-3"></i>פרטי שואל</h2>
                        <div>
                            <a href="/borrowers" class="btn btn-light me-2">
                                <i class="fas fa-arrow-right me-1"></i>חזור לרשימה
                            </a>
                            <a href="/borrowers/update/<%= borrower._id %>" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>ערוך
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- פרטי השואל -->
                    <div class="col-md-4">
                        <div class="card info-card mb-4">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-user-circle fa-5x"></i>
                                </div>
                                <h4><%= borrower.name || 'ללא שם' %></h4>
                                <p class="mb-2">
                                    <i class="fas fa-envelope me-2"></i>
                                    <%= borrower.email || 'לא צוין' %>
                                </p>
                                <p class="mb-2">
                                    <i class="fas fa-phone me-2"></i>
                                    <%= borrower.phone || 'לא צוין' %>
                                </p>
                                <p class="mb-0">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <%= borrower.address || 'לא צוינה' %>
                                </p>
                            </div>
                        </div>

                        <!-- סטטיסטיקות -->
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h5><i class="fas fa-chart-bar me-2"></i>סטטיסטיקות</h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="border-end">
                                            <h3 class="text-primary">
                                                <%= (borrower.borrowedBooks && borrower.borrowedBooks.length) || 0 %>
                                            </h3>
                                            <small class="text-muted">ספרים שאולים</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h3 class="text-success">
                                            <%= borrower.totalBorrowed || 0 %>
                                        </h3>
                                        <small class="text-muted">סה"כ השאלות</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ספרים שאולים -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                <h5><i class="fas fa-books me-2"></i>ספרים שאולים כרגע</h5>
                                <span class="status-badge bg-light text-dark">
                                    <%= (borrower.borrowedBooks && borrower.borrowedBooks.length) || 0 %> ספרים
                                
                            </div>
                            <div class="card-body">
                                <% if (borrower.borrowedBooks && borrower.borrowedBooks.length > 0) { %>
                                    <div class="row">
                                        <% borrower.borrowedBooks.forEach(book => { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="card book-item h-100">
                                                    <div class="card-body">
                                                        <h6 class="card-title">
                                                            <i class="fas fa-book text-primary me-2"></i>
                                                            <%= book.title || 'ללא כותרת' %>
                                                        </h6>
                                                        <p class="card-text">
                                                            <strong>מחבר:</strong> <%= book.author || 'לא צוין' %><br>
                                                            <strong>ISBN:</strong> <%= book.isbn || 'לא צוין' %><br>
                                                            <strong>תאריך השאלה:</strong> 
                                                            <%= book.borrowDate ? new Date(book.borrowDate).toLocaleDateString('he-IL') : 'לא צוין' %>
                                                        </p>
                                                        <% 
                                                        const borrowDate = new Date(book.borrowDate);
                                                        const dueDate = new Date(borrowDate.getTime() + (14 * 24 * 60 * 60 * 1000)); // 14 ימים
                                                        const today = new Date();
                                                        const isOverdue = today > dueDate;
                                                        %>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <small class="<%= isOverdue ? 'text-danger' : 'text-success' %>">
                                                                <i class="fas fa-calendar me-1"></i>
                                                                החזרה עד: <%= dueDate.toLocaleDateString('he-IL') %>
                                                            </small>
                                                            <div class="btn-group">
                                                                <a href="/books/<%= book._id %>" class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                                <button onclick="returnBook('<%= book._id %>')" class="btn btn-sm btn-outline-success">
                                                                    <i class="fas fa-undo"></i> החזר
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                                        <h5>אין ספרים שאולים כרגע</h5>
                                        <p class="text-muted">השואל לא שאל ספרים במערכת</p>
                                        <a href="/books" class="btn btn-custom">
                                            <i class="fas fa-plus me-2"></i>השאל ספר
                                        </a>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- היסטוריית השאלות -->
                        <div class="card mt-4">
                            <div class="card-header bg-warning text-dark">
                                <h5><i class="fas fa-history me-2"></i>היסטוריית השאלות</h5>
                            </div>
                            <div class="card-body">
                                <% if (borrower.borrowHistory && borrower.borrowHistory.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>ספר</th>
                                                    <th>תאריך השאלה</th>
                                                    <th>תאריך החזרה</th>
                                                    <th>סטטוס</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% borrower.borrowHistory.forEach(record => { %>
                                                    <tr>
                                                        <td><%= record.bookTitle %></td>
                                                        <td><%= new Date(record.borrowDate).toLocaleDateString('he-IL') %></td>
                                                        <td>
                                                            <%= record.returnDate ? new Date(record.returnDate).toLocaleDateString('he-IL') : 'לא הוחזר' %>
                                                        </td>
                                                        <td>
                                                            <span class="badge <%= record.returnDate ? 'bg-success' : 'bg-warning' %>">
                                                                <%= record.returnDate ? 'הוחזר' : 'שאול' %>
                                                            
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-3">
                                        <i class="fas fa-history fa-2x text-muted mb-2"></i>
                                        <p class="text-muted">אין היסטוריית השאלות</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function returnBook(bookId) {
            if (confirm('האם אתה בטוח שברצונך להחזיר את הספר?')) {
                fetch(`/books/return/${bookId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        borrowerId: '<%= borrower._id %>'
                    })
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('שגיאה בהחזרת הספר');
                    }
                }).catch(error => {
                    alert('שגיאה בהחזרת הספר');
                });
            }
        }
    </script>
</body>
</html>
