<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ניהול שואלים - ספרייה</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container { padding-top: 2rem; }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
            background: rgba(255,255,255,0.95);
        }
        .card-header {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border-radius: 15px 15px 0 0 !important;
            color: white;
            padding: 1.5rem;
        }
        .btn-custom {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            color: white;
        }
        .borrower-card {
            transition: transform 0.2s;
            margin-bottom: 1rem;
        }
        .borrower-card:hover {
            transform: translateY(-3px);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h2><i class="fas fa-users me-3"></i>ניהול שואלים</h2>
                        <div class="mt-3">
                            <a href="/borrowers/add" class="btn btn-custom me-2">
                                <i class="fas fa-plus me-2"></i>הוסף שואל חדש
                            </a>
                            <button class="btn btn-custom" onclick="searchBorrowers()">
                                <i class="fas fa-search me-2"></i>חיפוש
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- חיפוש -->
                        <div class="row mb-4">
                            <div class="col-md-6 mx-auto">
                                <input type="text" id="searchInput" class="form-control" placeholder="חפש לפי שם או אימייל...">
                            </div>
                        </div>

                        <!-- רשימת שואלים -->
                        <div class="row" id="borrowersList">
                            <% if (typeof borrowers !== 'undefined' && borrowers.length > 0) { %>
                                <% borrowers.forEach(borrower => { %>
                                    <div class="col-md-6 col-lg-4 mb-4 borrower-item">
                                        <div class="card borrower-card h-100">
                                            <div class="card-header bg-info text-white">
                                                <h5 class="card-title mb-0">
                                                    <i class="fas fa-user me-2"></i><%= borrower.name || 'ללא שם' %>
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <strong><i class="fas fa-envelope me-1"></i> אימייל:</strong> 
                                                    <%= borrower.email || 'לא צוין' %><br>
                                                    <strong><i class="fas fa-phone me-1"></i> טלפון:</strong> 
                                                    <%= borrower.phone || 'לא צוין' %><br>
                                                    <strong><i class="fas fa-map-marker-alt me-1"></i> כתובת:</strong> 
                                                    <%= borrower.address || 'לא צוינה' %>
                                                </p>
                                                <% if (borrower.borrowedBooks && borrower.borrowedBooks.length > 0) { %>
                                                    <div class="alert alert-warning">
                                                        <i class="fas fa-book me-1"></i>
                                                        ספרים שאולים: <%= borrower.borrowedBooks.length %>
                                                    </div>
                                                <% } else { %>
                                                    <div class="alert alert-success">
                                                        <i class="fas fa-check me-1"></i>
                                                        אין ספרים שאולים
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div class="card-footer">
                                                <div class="btn-group w-100">
                                                    <a href="/borrowers/<%= borrower._id %>" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i> צפה
                                                    </a>
                                                    <a href="/borrowers/update/<%= borrower._id %>" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> ערוך
                                                    </a>
                                                    <button onclick="deleteBorrower('<%= borrower._id %>')" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> מחק
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-5">
                                        <i class="fas fa-users fa-5x text-muted mb-4"></i>
                                        <h4>אין שואלים רשומים במערכת</h4>
                                        <p class="text-muted">התחל בהוספת השואל הראשון שלך</p>
                                        <a href="/borrowers/add" class="btn btn-custom">
                                            <i class="fas fa-plus me-2"></i>הוסף שואל ראשון
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // חיפוש שואלים
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const borrowerItems = document.querySelectorAll('.borrower-item');
            
            borrowerItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // מחיקת שואל
        function deleteBorrower(id) {
            if (confirm('האם אתה בטוח שברצונך למחוק את השואל? פעולה זו לא ניתנת לביטול.')) {
                fetch(`/borrowers/delete/${id}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('שגיאה במחיקת השואל');
                    }
                }).catch(error => {
                    alert('שגיאה במחיקת השואל');
                });
            }
        }

        function searchBorrowers() {
            document.getElementById('searchInput').focus();
        }
    </script>
</body>
</html>
