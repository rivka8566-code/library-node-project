<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ניהול ספרים - ספרייה</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-bg: #fefefe;
            --secondary-bg: #f8f9fa;
            --accent: #6c757d;
            --text-primary: #2c3e50;
            --text-secondary: #6c757d;
            --border: #e9ecef;
            --hover: #f1f3f4;
            --success: #d4edda;
            --warning: #fff3cd;
            --danger: #f8d7da;
            --info: #d1ecf1;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Assistant', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background-color: var(--primary-bg);
            color: var(--text-primary);
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 20px;
        }

        /* כותרת ראשית */
        .main-header {
            background-color: var(--primary-bg);
            border-bottom: 1px solid var(--border);
            padding: 2rem 0;
            margin-bottom: 2rem;
            text-align: center;
        }

        .main-header h2 {
            font-size: 2.2rem;
            font-weight: 300;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .main-header i {
            color: var(--accent);
            margin-left: 0.5rem;
        }

        /* כפתורי פעולה */
        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 1.5rem;
        }

        .btn-clean {
            padding: 0.75rem 1.5rem;
            border: 1px solid var(--border);
            border-radius: 6px;
            background-color: var(--primary-bg);
            color: var(--text-primary);
            text-decoration: none;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            cursor: pointer;
        }

        .btn-clean:hover {
            background-color: var(--hover);
            border-color: var(--accent);
            color: var(--text-primary);
            transform: translateY(-1px);
        }

        .btn-primary-clean {
            background-color: var(--text-primary);
            color: var(--primary-bg);
            border-color: var(--text-primary);
        }

        .btn-primary-clean:hover {
            background-color: var(--accent);
            color: var(--primary-bg);
        }

        /* חיפוש וסינון */
        .search-filter-section {
            max-width: 800px;
            margin: 0 auto 3rem auto;
        }

        .search-row {
            display: grid;
            grid-template-columns: 1fr auto auto;
            gap: 1rem;
            align-items: center;
        }

        .search-input {
            width: 100%;
            padding: 1rem 1.5rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 1rem;
            background-color: var(--primary-bg);
            transition: border-color 0.3s ease;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--accent);
        }

        .filter-select {
            padding: 1rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            background-color: var(--primary-bg);
            color: var(--text-primary);
            font-size: 1rem;
            min-width: 150px;
        }

        /* רשת ספרים */
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .book-card-clean {
            background-color: var(--primary-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .book-card-clean:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
            border-color: var(--accent);
        }

        .card-header-clean {
            background-color: var(--secondary-bg);
            padding: 1.5rem;
            border-bottom: 1px solid var(--border);
        }

        .book-title {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 500;
            color: var(--text-primary);
            line-height: 1.4;
        }

        .book-author {
            margin: 0.5rem 0 0 0;
            color: var(--text-secondary);
            font-size: 1rem;
        }

        .card-body-clean {
            padding: 1.5rem;
        }

        .book-info {
            margin-bottom: 1rem;
        }

        .book-info p {
            margin: 0.5rem 0;
            font-size: 0.95rem;
            color: var(--text-secondary);
        }

        .book-info strong {
            color: var(--text-primary);
        }

        /* סטטוס ספר */
        .status-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 1rem;
        }

        .status-available {
            background-color: var(--success);
            color: #155724;
        }

        .status-borrowed {
            background-color: var(--warning);
            color: #856404;
        }

        .status-reserved {
            background-color: var(--info);
            color: #0c5460;
        }

        /* פרטי השאלה */
        .borrow-info {
            background-color: var(--secondary-bg);
            padding: 1rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .borrow-info p {
            margin: 0.25rem 0;
        }

        /* כפתורי פעולות בכרטיס */
        .card-actions {
            padding: 1rem 1.5rem;
            background-color: var(--secondary-bg);
            border-top: 1px solid var(--border);
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn-sm-clean {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            border-radius: 4px;
            border: 1px solid var(--border);
            background-color: var(--primary-bg);
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.3s ease;
            flex: 1;
            text-align: center;
            cursor: pointer;
            min-width: 80px;
        }

        .btn-sm-clean:hover {
            background-color: var(--hover);
            color: var(--text-primary);
        }

        .btn-success-clean {
            background-color: var(--success);
            color: #155724;
            border-color: #c3e6cb;
        }

        .btn-success-clean:hover {
            background-color: #c3e6cb;
            color: #155724;
        }

        .btn-warning-clean {
            background-color: var(--warning);
            color: #856404;
            border-color: #ffeaa7;
        }

        .btn-warning-clean:hover {
            background-color: #ffeaa7;
            color: #856404;
        }

        .btn-danger-clean {
            background-color: var(--danger);
            color: #721c24;
            border-color: #f5c6cb;
        }

        .btn-danger-clean:hover {
            background-color: #f1b0b7;
            color: #721c24;
        }

        /* מצב ריק */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-secondary);
            grid-column: 1 / -1;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            color: var(--accent);
        }

        .empty-state h4 {
            margin-bottom: 1rem;
            color: var(--text-primary);
        }

        /* סטטיסטיקות */
        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background-color: var(--secondary-bg);
            padding: 1.5rem;
            border-radius: 8px;
            text-align: center;
            border: 1px solid var(--border);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* רספונסיביות */
        @media (max-width: 768px) {
            .container {
                padding: 1rem 15px;
            }
            
            .main-header h2 {
                font-size: 1.8rem;
            }
            
            .books-grid {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .search-row {
                grid-template-columns: 1fr;
            }
            
            .card-actions {
                flex-direction: column;
            }
            
            .stats-section {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .stats-section {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- כותרת ראשית -->
        <header class="main-header">
            <h2><i class="fas fa-book"></i>ניהול ספרים</h2>
            <div class="action-buttons">
                <a href="/books/add" class="btn-clean btn-primary-clean">
                    <i class="fas fa-plus" style="margin-left: 0.5rem;"></i>הוסף ספר חדש
                </a>
                <button class="btn-clean" onclick="document.getElementById('searchInput').focus()">
                    <i class="fas fa-search" style="margin-left: 0.5rem;"></i>חיפוש
                </button>
                <a href="/books/categories" class="btn-clean">
                    <i class="fas fa-tags" style="margin-left: 0.5rem;"></i>קטגוריות
                </a>
            </div>
        </header>

        <!-- סטטיסטיקות -->
        <div class="stats-section">
            <div class="stat-card">
                <div class="stat-number" id="totalBooks">0</div>
                <div class="stat-label">סה"כ ספרים</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="availableBooks">0</div>
                <div class="stat-label">ספרים זמינים</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="borrowedBooks">0</div>
                <div class="stat-label">ספרים שאולים</div>
            </div>
        </div>

        <!-- חיפוש וסינון -->
        <div class="search-filter-section">
            <div class="search-row">
                <input type="text" id="searchInput" class="search-input" placeholder="חפש לפי שם ספר, מחבר או ISBN...">
                <select id="statusFilter" class="filter-select">
                    <option value="">כל הסטטוסים</option>
                    <option value="available">זמין</option>
                    <option value="borrowed">שאול</option>
                    <option value="reserved">שמור</option>
                </select>
                <select id="categoryFilter" class="filter-select">
                    <option value="">כל הקטגוריות</option>
                    <option value="fiction">בדיוני</option>
                    <option value="non-fiction">עיוני</option>
                    <option value="science">מדע</option>
                    <option value="history">היסטוריה</option>
                    <option value="biography">ביוגרפיה</option>
                </select>
            </div>
        </div>

        <!-- רשימת ספרים -->
        <div class="books-grid" id="booksList">
            <% if (typeof books !== 'undefined' && books.length > 0) { %>
                <% books.forEach(book => { %>
                    <div class="book-item" data-status="<%= book.status || 'available' %>" data-category="<%= book.category || '' %>">
                        <div class="book-card-clean">
                            <div class="card-header-clean">
                                <h5 class="book-title">
                                    <i class="fas fa-book-open" style="margin-left: 0.5rem; color: var(--accent);"></i>
                                    <%= book.title || 'ללא כותרת' %>
                                </h5>
                                <p class="book-author">מאת: <%= book.author || 'לא צוין' %></p>
                            </div>
                            <div class="card-body-clean">
                                <div class="book-info">
                                    <% if (book.isbn) { %>
                                        <p><strong><i class="fas fa-barcode" style="margin-left: 0.5rem;"></i> ISBN:</strong> <%= book.isbn %></p>
                                    <% } %>
                                    <% if (book.category) { %>
                                        <p><strong><i class="fas fa-tag" style="margin-left: 0.5rem;"></i> קטגוריה:</strong> <%= book.category %></p>
                                    <% } %>
                                    <% if (book.publishYear) { %>
                                        <p><strong><i class="fas fa-calendar" style="margin-left: 0.5rem;"></i> שנת הוצאה:</strong> <%= book.publishYear %></p>
                                    <% } %>
                                    <% if (book.publisher) { %>
                                        <p><strong><i class="fas fa-building" style="margin-left: 0.5rem;"></i> הוצאה:</strong> <%= book.publisher %></p>
                                    <% } %>
                                </div>
                                
                                <!-- סטטוס הספר -->
                                <% if (book.status === 'borrowed') { %>
                                    <span class="status-badge status-borrowed">
                                        <i class="fas fa-user-clock"></i> שאול
                                    
                                    <% if (book.borrowedBy) { %>
                                        <div class="borrow-info">
                                            <p><strong>שאול על ידי:</strong> <%= book.borrowedBy.name || 'לא צוין' %></p>
                                            <% if (book.borrowDate) { %>
                                                <p><strong>תאריך השאלה:</strong> <%= new Date(book.borrowDate).toLocaleDateString('he-IL') %></p>
                                            <% } %>
                                            <% if (book.returnDate) { %>
                                                <p><strong>תאריך החזרה:</strong> <%= new Date(book.returnDate).toLocaleDateString('he-IL') %></p>
                                            <% } %>
                                        </div>
                                    <% } %>
                                <% } else if (book.status === 'reserved') { %>
                                    <span class="status-badge status-reserved">
                                        <i class="fas fa-bookmark"></i> שמור
                                    
                                <% } else { %>
                                    <span class="status-badge status-available">
                                        <i class="fas fa-check-circle"></i> זמין
                                    
                                <% } %>
                            </div>
                            <div class="card-actions">
                                <a href="/books/<%= book._id %>" class="btn-sm-clean">
                                    <i class="fas fa-eye"></i> צפה
                                </a>
                                <a href="/books/update/<%= book._id %>" class="btn-sm-clean">
                                    <i class="fas fa-edit"></i> ערוך
                                </a>
                                <% if (book.status === 'available') { %>
                                    <button onclick="borrowBook('<%= book._id %>')" class="btn-sm-clean btn-warning-clean">
                                        <i class="fas fa-hand-holding"></i> השאל
                                    </button>
                                <% } else if (book.status === 'borrowed') { %>
                                    <button onclick="returnBook('<%= book._id %>')" class="btn-sm-clean btn-success-clean">
                                        <i class="fas fa-undo"></i> החזר
                                    </button>
                                <% } %>
                                <button onclick="deleteBook('<%= book._id %>')" class="btn-sm-clean btn-danger-clean">
                                    <i class="fas fa-trash"></i> מחק
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-book"></i>
                    <h4>אין ספרים במערכת</h4>
                    <p>התחל בהוספת הספר הראשון שלך</p>
                    <a href="/books/add" class="btn-clean btn-primary-clean">
                        <i class="fas fa-plus" style="margin-left: 0.5rem;"></i>הוסף ספר ראשון
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // עדכון סטטיסטיקות
        function updateStats() {
            const bookItems = document.querySelectorAll('.book-item');
            const totalBooks = bookItems.length;
            let availableBooks = 0;
            let borrowedBooks = 0;

            bookItems.forEach(item => {
                const status = item.dataset.status;
                if (status === 'available') availableBooks++;
                else if (status === 'borrowed') borrowedBooks++;
            });

            document.getElementById('totalBooks').textContent = totalBooks;
            document.getElementById('availableBooks').textContent = availableBooks;
            document.getElementById('borrowedBooks').textContent = borrowedBooks;
        }

        // חיפוש וסינון ספרים
        function filterBooks() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const categoryFilter = document.getElementById('categoryFilter').value;
            const bookItems = document.querySelectorAll('.book-item');
            
            bookItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                const status = item.dataset.status;
                const category = item.dataset.category;
                
                const matchesSearch = text.includes(searchTerm);
                const matchesStatus = !statusFilter || status === statusFilter;
                const matchesCategory = !categoryFilter || category === categoryFilter;
                
                if (matchesSearch && matchesStatus && matchesCategory) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Event listeners
        document.getElementById('searchInput').addEventListener('input', filterBooks);
        document.getElementById('statusFilter').addEventListener('change', filterBooks);
        document.getElementById('categoryFilter').addEventListener('change', filterBooks);

        // השאלת ספר
        function borrowBook(bookId) {
            const borrowerName = prompt('הכנס שם השואל:');
            if (borrowerName) {
                fetch(`/books/borrow/${bookId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ borrowerName })
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('שגיאה בהשאלת הספר');
                    }
                }).catch(error => {
                    console.error('Error:', error);
                    alert('שגיאה בהשאלת הספר');
                });
            }
        }

        // החזרת ספר
        function returnBook(bookId) {
            if (confirm('האם אתה בטוח שברצונך להחזיר את הספר?')) {
                fetch(`/books/return/${bookId}`, {
                    method: 'POST'
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('שגיאה בהחזרת הספר');
                    }
                }).catch(error => {
                    console.error('Error:', error);
                    alert('שגיאה בהחזרת הספר');
                });
            }
        }

        // מחיקת ספר
        function deleteBook(bookId) {
            if (confirm('האם אתה בטוח שברצונך למחוק את הספר? פעולה זו לא ניתנת לביטול.')) {
                fetch(`/books/delete/${bookId}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('שגיאה במחיקת הספר');
                    }
                }).catch(error => {
                    console.error('Error:', error);
                    alert('שגיאה במחיקת הספר');
                });
            }
        }

        // עדכון סטטיסטיקות בטעינת הדף
        document.addEventListener('DOMContentLoaded', updateStats);
    </script>
</body>
</html>
